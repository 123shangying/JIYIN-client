<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/start"
    android:orientation="vertical"
    tools:context="ui.fragment.dashboard.DynamicDetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/dynamic_detail_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_return"></ImageView>

        <TextView
            android:text="动态详情"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/dynamic_detail_back"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"></TextView>

        <ImageView
            android:id="@+id/dynamic_detail_share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_shar03"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

    </RelativeLayout>


    <!--    评论列表-->
    <ListView
        android:id="@+id/dynamic_detail_listview"
        android:footerDividersEnabled="true"
        android:divider="#f4f4f4"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>